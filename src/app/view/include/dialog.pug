mixin dialog(id, title, icon)
  dialog(id='dialog' + id)
    .dialog-title
      if icon
        a(class='fa fa-'+icon href='javascript')
      = ' ' + title
    a.dialog-close.fa.fa-close(href='javascript:')
    .dialog-content
      block

section#dialogs
  //- New list
  +dialog('ListPrompt', 'New List')
    form(action='javascript:')
      input(type='text')
      input(type='submit' value='Create List')
        
  //- Edit list
  +dialog('ListEditPrompt', 'Edit List')
    form(action='javascript:')
      input(type='text')
      input(type='submit' value='Rename')
    .dialog-options
      a.fa.fa-close(href='javascript:')
      a.fa.fa-users(href='javascript:')
  
  //- New list item
  +dialog('ListItemPrompt', 'New Item')
    form(action='javascript:')
      input(type='text')
      input(type='submit' value='Create Item')
  
  //- Confirmation
  +dialog('Confirm', 'Confirm Action')
    p.text-center.target Confirm action?
    .text-center
      a.btn.btn-confirm(href='javascript:') Confirm
      a.btn.btn-cancel(href='javascript:') Cancel
  
  //- About
  +dialog('About', 'About ' + app.productName)
    h1= `${app.productName} v${app.version}`
